<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :name, placeholder: "Your Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :username, placeholder: "Choose a @username", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <strong>Upload a Profile Pic:</strong>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-group">
    <%= f.text_area :bio, placeholder: "Tell us what you're all about...", class: "form-control" %>
  </div>

  <div class="form-group">    
    <%= f.email_field :email, placeholder: "Enter email address", autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: "Set a password (#{@minimum_password_length} characters minimum)", autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
